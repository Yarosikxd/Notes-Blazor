@page "/Notes"
@using Domain.Model
@using Application.Service
@inject NoteService noteService

<NavLink class="nav-link" href="AddNewNote" style="background-color: #007bff; color: #fff; padding: 10px 20px; border: 1px solid #007bff; border-radius: 5px; border-width: 2px; width: 100px; height: 40px;">
    <span class="oi oi-plus" aria-hidden="true"></span> New Note
</NavLink>
<hr />
<NavLink class="nav-link" href="SearchNote" style="background-color: #007bff; color: #fff; padding: 10px 0; border: 1px solid #007bff; border-radius: 5px; border-width: 2px; width: 100%; height: 40px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px;">
    <span class="oi oi-magnifying-glass" aria-hidden="true"></span> Search Notes
</NavLink>



<h3>NotesList</h3>

@if(NtObj is null)
{
    <p><em> Loading..............</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
               <th>
                   Number Note
               </th>
                <th>
                    Note Title
                </th>
                <th>
                    Data Create
                </th>
                <th>
                    View Note
                </th>
              @*   <th>
                    Content
                </th> *@
                <th> 
                    Edit Note
                </th>
                <th>
                    Delete Note
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var note in NtObj)
            {
                <tr>
                    <td>
                        @note.Id
                    </td>
                    <td>
                        @note.Title
                    </td>
                    <td>
                        @note.DateCreate
                    </td>
                   @*  <td>
                        @note.Content
                    </td> *@
                    <td>
                        <a class="nav-link btn btn-primary" href="ViewNote/@note.Id">
                            <span class="oi oi-pencil" aria-hidden="true">View Note </span>
                        </a>
                    </td>
                    <td>
                        <a class="nav-link btn btn-primary" href="EditNote/@note.Id">
                            <span class="oi oi-pencil"  aria-hidden="true" >Edit Note </span>
                        </a>
                    </td>
                    <td>
                        <a class="nav-link btn btn-danger" href="DeleteNote/@note.Id">
                            <span class="oi oi-trash"  aria-hidden="true">Delete Note </span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<Note> NtObj;

    protected override async Task OnInitializedAsync()
    {
        NtObj = await Task.Run(() => noteService.GetAllNotes());
    }
}
