@page "/SearchNote"
@using Domain.Model
@using System.Linq
@using Microsoft.EntityFrameworkCore
@using Domain.Context
@inject AppDbContext _context

<input type="text" @bind="searchTerm" placeholder="Enter The Word Fo Searching">
<button @onclick="Search">Search</button>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Note Id</th>
                <th>Note Title</th>
                <th>Note Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var note in filteredNotes)
            {
                <tr>
                    <td>@note.Id</td>
                    <td>@note.Title</td>
                    <td>@note.Content</td>
                </tr>
            }
        </tbody>
    </table>


@code {
    private string searchTerm = "";
    private List<Note> notes = new List<Note>(); 

    private List<Note> filteredNotes = new List<Note>(); 

    private void Search()
    {
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            //   perform a search in the Notes table by words in the title or text
            filteredNotes = _context.Notes
                .Where(note => EF.Functions.ILike(note.Title, $"%{searchTerm}%") || EF.Functions.ILike(note.Content, $"%{searchTerm}%"))
                .ToList();
        }
        else
        {
            // If the search query is empty, we show all notes
            filteredNotes = _context.Notes.ToList();
        }
    }
}
